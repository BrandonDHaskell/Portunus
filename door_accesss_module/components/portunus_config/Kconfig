menu "Portunus Door Access Module"

config PORTUNUS_FW_VERSION
    string "Firmware version string"
    default "0.1.0"

config PORTUNUS_MODULE_ID
    string "Module ID (later moved to provisioning/NVS)"
    default "door-001"

config PORTUNUS_SERVER_BASE_URL
    string "Server base URL (http(s)://host:port)"
    default "http://192.168.1.50:8080"

config PORTUNUS_HEARTBEAT_INTERVAL_MS
    int "Heartbeat interval (ms)"
    default 5000

menu "WiFi (MVP)"
config PORTUNUS_WIFI_SSID
    string "WiFi SSID"
    default "YOUR_WIFI"

config PORTUNUS_WIFI_PASSWORD
    string "WiFi Password"
    default "YOUR_PASS"
endmenu

menu "Required hardware"
config PORTUNUS_STRIKE_GPIO
    int "Door strike GPIO"
    default 6

config PORTUNUS_STRIKE_ACTIVE_HIGH
    bool "Strike active high"
    default y
endmenu

menu "Optional hardware"

config PORTUNUS_ENABLE_REED_SWITCH
    bool "Enable reed switch door sensor"
    default n

config PORTUNUS_REED_GPIO
    int "Reed switch GPIO"
    default 7
    depends on PORTUNUS_ENABLE_REED_SWITCH

config PORTUNUS_REED_ACTIVE_LOW
    bool "Reed active low (pull-up)"
    default y
    depends on PORTUNUS_ENABLE_REED_SWITCH

config PORTUNUS_ENABLE_STATUS_LED
    bool "Enable status LED"
    default n

config PORTUNUS_STATUS_LED_GPIO
    int "Status LED GPIO"
    default 8
    depends on PORTUNUS_ENABLE_STATUS_LED

config PORTUNUS_STATUS_LED_ACTIVE_HIGH
    bool "Status LED active high"
    default y
    depends on PORTUNUS_ENABLE_STATUS_LED

endmenu

endmenu

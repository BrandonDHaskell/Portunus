# Target is set via: idf.py set-target esp32s3

CONFIG_PORTUNUS_FW_VERSION="0.1.0"
CONFIG_PORTUNUS_MODULE_ID="door-001"

CONFIG_PORTUNUS_SERVER_BASE_URL="http://192.168.1.50:8080"
CONFIG_PORTUNUS_HEARTBEAT_INTERVAL_MS=5000

# WiFi (MVP: compile-time config; later: provisioning -> NVS)
CONFIG_PORTUNUS_WIFI_SSID="YOUR_WIFI"
CONFIG_PORTUNUS_WIFI_PASSWORD="YOUR_PASS"

# Required hardware defaults
CONFIG_PORTUNUS_STRIKE_GPIO=6
CONFIG_PORTUNUS_STRIKE_ACTIVE_HIGH=y

# Optional hardware (off by default)
# CONFIG_PORTUNUS_ENABLE_REED_SWITCH is not set
# CONFIG_PORTUNUS_ENABLE_STATUS_LED is not set
CONFIG_PORTUNUS_REED_GPIO=7
CONFIG_PORTUNUS_REED_ACTIVE_LOW=y
CONFIG_PORTUNUS_STATUS_LED_GPIO=8
CONFIG_PORTUNUS_STATUS_LED_ACTIVE_HIGH=y
